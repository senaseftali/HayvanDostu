@model HayvanDostu.Model.ViewModels.KurumsalUyeVM

@{
    ViewBag.Title = "Kurumsal Üye Ekle";
    //Layout = null;
}

<h2>Kurumsal Üye Kayıt</h2>

@using (Html.BeginForm("Index", "KurumsalUye", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <br />
    <div class="form-group row">
        <label class="col-3 col-form-label">Şirket Adı : </label>
        <div class="col-9">
            @Html.TextBoxFor(model => model.KurumAdi, new { @class = "form-control", @required = "required" })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-3 col-form-label">Hizmet Başlangıç Tarihi:</label>
        <div class="col-9">
            @Html.TextBoxFor(model => model.HizmetBaslangicYili, new { @class = "form-control", @type = "number", @required = "required" })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-3 col-form-label">Telefon1: </label>
        <div class="col-9">
            @Html.TextBoxFor(model => model.KurumsalTelefon1, new { @class = "form-control", @required = "required" })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-3 col-form-label">Telefon2: </label>
        <div class="col-9">
            @Html.TextBoxFor(model => model.KurumsalTelefon2, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-3 col-form-label">Adres: </label>
        <div class="col-9">
            @Html.TextAreaFor(model => model.Adres, new { @class = "form-control", @row = "3", @required = "required" })
        </div>
    </div>

    <div class="form-group row">
        <label class="col-3 col-form-label"> Verdiği Hizmetler </label>
        <div class="col-9">
            @Html.TextAreaFor(model => model.VerdigiHizmetler, new { @class = "form-control", @row = "3", @required = "required" })
        </div>
    </div>

    <div class="form-group row">
        <label class="col-3 col-form-label"> Hizmet Verdiği Hayvan Türleri : </label>
        <div class="col-9">
            @Html.TextAreaFor(model => model.HizmetVerdigiHayvanTurleri, new { @class = "form-control", @row = "3", @required = "required" })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-2 col-form-label">Fotoğrafları Seç : </label>
        <div class="cols-2">
            <input type="file" name="Files" id="Files" multiple /><br />
        </div>
    </div>
    //burdayım
    <div class="form-group row">
        <label class="col-2 col-form-label">Kurum Türü : </label>
        <div class="cols-2">
            @Html.DropDownListFor(model => model.HizmetID, (IEnumerable<SelectListItem>)ViewBag.HizmetListe, new { @class = "form-control" })
        </div>
    </div>

    <div>
        <h2>Giriş Bilgisi </h2>
        <br />
        <div class="form-group row">
            <label class="col-3 col-form-label">E-Mail : </label>
            <div class="col-9">
                @Html.TextBoxFor(model => model.Mail, new { @class = "form-control", @type = "email" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-3 col-form-label">Kullanıcı Adı: </label>
            <div class="col-9">
                @Html.TextBoxFor(model => model.KullaniciAdi, new { @class = "form-control", @required = "required" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-3 col-form-label">Parola: </label>
            <div class="col-9">
                @Html.TextBoxFor(model => model.Sifre, new { @class = "form-control", @type = "password", @required = "required" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12 text-right">
                <input type="submit" name="submit" value="Kayıt Ol" class="btn btn-success" />
                <input type="reset" value="Temizle" class="btn btn-danger">
            </div>
        </div>
    </div>
}
@section scripts{
    <script>
        $(".btn-success").click(function () {
            alert("Kayıt başarılı");
        });
    </script>
    
}
